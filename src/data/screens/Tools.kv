<Tools>:
    name: "tools"

    MDBoxLayout:
        adaptive_height: True
        orientation: 'vertical'
        padding: [dp(15),dp(15), dp(15), dp(20)]
        spacing: dp(15)

        MyLabel:
            text: "Tools"
            font_size: sp(30)
            halign: "left"
        
        MDBoxLayout:
            adaptive_height: True
            orientation: "vertical"
            spacing: dp(15)

            MyCardButton:
                primary_text: "File"
                second_text: "Download Manager"
                icon: "download"

            MyCardButton:
                primary_text: "Video Information"
                second_text: "Video Data Query"
                icon: "information-variant"

            MyCardButton:
                icon: "playlist-music"
                primary_text: "Playlist"
                second_text: "See Playlist"

            MyCardButton:
                icon: "account-check"
                primary_text: "Channel"
                second_text: "Channel Data Query"
        
    MDIconButton:
        icon: "arrow-up"
        pos_hint: {"center_x":.5, "top":1}
        icon_size: sp(32)
        theme_text_color: "Custom"
        icon_color: app.theme_cls.primary_color
        on_release:
            root.parent.transition.direction = "down"
            root.parent.current = "info"